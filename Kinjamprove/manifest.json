{
	"name": "Kinjamprove",
	"manifest_version": 2,
	"description": "View any Kinja comments sections with threaded replies & other improvements at the click of a button. Never click \"Show More\" again!",
	"version": "0.0.0.32",


	"icons": {
		"128": "icons/kinjamproveLogo.png"
	},

	"content_scripts": [
		{
			"matches": [
				"*://*.kinja.com/*",
				"*://*.avclub.com/*",
				"*://*.jezebel.com/*",
				"*://*.jalopnik.com/*",
				"*://*.gizmodo.com/*",
				"*://*.deadspin.com/*",
				"*://*.kotaku.com/*",
				"*://*.lifehacker.com/*",
				"*://*.theroot.com/*",
				"*://*.splinternews.com/*"
			],

			"js": [ "jquery-3.2.1.min.js", "mutation-summary-minified.js", "CommentClass.js", "kinjamprove.js" ],
			"run_at": "document_end"
		}
	],

	"permissions": [
		"declarativeContent",
		"activeTab",
		"*://*.kinja.com/*",
		"*://*.avclub.com/*",
		"*://*.jezebel.com/*",
		"*://*.jalopnik.com/*",
		"*://*.gizmodo.com/*",
		"*://*.deadspin.com/*",
		"*://*.kotaku.com/*",
		"*://*.lifehacker.com/*",
		"*://*.theroot.com/*",
		"*://*.splinternews.com/*"
	],

	"web_accessible_resources": ["mutation-summary-minified.js", "CommentClass.js", "comments.css"]
}

